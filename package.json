{
  "name": "postcss-scss",
  "version": "2.0.0",
  "description": "SCSS parser for PostCSS",
  "keywords": [
    "css",
    "postcss",
    "postcss-syntax",
    "parser",
    "scss",
    "sass"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-scss",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "test": "gulp && eslint test/*.js lib/*.es6 *.js"
  },
  "dependencies": {
    "postcss": "^7.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@logux/eslint-config": "^27.0.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-add-module-exports": "1.0.0",
    "del": "^3.0.0",
    "eslint": "^5.9.0",
    "eslint-config-postcss": "^3.0.7",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.1",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "gulp": "4.0.2",
    "gulp-babel": "8.0.0",
    "gulp-changed": "^4.0.2",
    "gulp-jest": "^4.0.3",
    "gulp-json-editor": "^2.5.4",
    "gulp-sourcemaps": "^2.6.5",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.1.0",
    "postcss-parser-tests": "^6.3.1",
    "pre-commit": "^1.2.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint-config-postcss",
    "rules": {
      "consistent-return": "off"
    },
    "overrides": [
      {
        "files": [
          "gulpfile.js"
        ],
        "rules": {
          "global-require": "off"
        }
      }
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/build"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "loose": true
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "browserslist": [
    "last 2 version",
    "not dead",
    "not Explorer 11",
    "not ExplorerMobile 11",
    "node 6"
  ],
  "main": "lib/scss-syntax",
  "types": "lib/scss-syntax.d.ts",
  "lint-staged": {
    "test/*.js": "eslint",
    "lib/*.es6": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
